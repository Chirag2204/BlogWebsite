<%-include("partials/header")-%>
<form class="form-signin"  action="/signup" method="post">

  <h1 class="h1 mb-3 font-weight-bold" style="text-align:center; margin-bottom : 30px;">SignUp</h1>
   <p style="color : red;fontsize : 3rem;"><%=text1%></p>
    <label for="inputEmail">Email address</label>
    <input style="margin-bottom : 10px;" type="email" name="email" class="form-control" placeholder="Email address" required autofocus>

    <label for="inputusername" >Username</label>
    <input style="margin-bottom : 10px;" type="text" name="username" class="form-control" placeholder="Username" required autofocus>

    <label for="inputPassword">Password</label>
    <input style="margin-bottom : 10px;" type="password" name="password" class="form-control" placeholder="Password" required style="margin-bottom: 10px;">

    <button class="btn btn-lg  btn-dark btn-outline-primary " type="submit">SignUp</button>

</form>
<%-include("partials/footer")-%>
